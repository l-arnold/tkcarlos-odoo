#!/bin/bash -ex

# Set variables
#
 
DB_USER=odoo
DB_PASS=$(mcookie)
DB_NAME="Turnkeylinux Example"

# We will use a random password for now. Reset during inithook
ODOO_ADMIN_PASSWORD=$(mcookie)

# User name that Odoo will run under
SERVICE_USER=$DB_USER

CONF=/etc/odoo/odoo.conf

# Install odoo from third party repo
apt-get update
apt-get install -y odoo

VER=0.12.6-1
DEB="wkhtmltox_${VER}.buster_amd64.deb"
URL="https://github.com/wkhtmltopdf/packaging/releases/download/${VER}"
wget $UR}/$DE}
dpkg -i $DEB
rm $DEB

# Install deps that can't be installed via package using pip
# *******************************************
pip3 install psycogreen


# Create database role for odoo
# *******************************************
 
# Start postgresql server
service postgresql start

# Create db user
su postgres -c "createuser --superuser --createdb --no-createrole $DB_USER"

# Set db user password
su postgres -c "psql postgres" << EOF
alter user $DB_USER with encrypted password '$DB_PASS';
EOF
su postgres -c "psql postgres" << EOF
create database "$DB_NAME" owner $DB_USER;
EOF

# Set password/name in config file
sed -i "s|db_password =.*|db_password = $DB_PASS|" $CONF
echo "db_name =" >> $CONF

# Stop postgresql server
service postgresql stop

# Set admin password to random value for now
sed -i "s|admin_passwd =.*|admin_passwd = $ODOO_ADMIN_PASSWORD|" $CONF

# Fixes longpolling
sed -i '/start-stop-daemon/ s/ -- / -- --workers=2 /' /etc/init.d/odoo

# Add and disable service user
usermod -L $SERVICE_USER

# Add service to startup
update-rc.d odoo defaults

# Enable needed modules
a2enmod proxy_http headers rewrite		

# Configure sites
a2dissite 000-default
a2ensite odoo.conf

# Populate database
service postgresql start
service apache2 start

odoo -i base -d "$DB_NAME" --stop-after-init --db_host=localhost -r $DB_USER -w $DB_PASS

service odoo start

while [[ "$(curl -Lk http://localhost)" = *"Unavailable"* ]]; do
    sleep 1
done

URL="https://127.0.0.1/web/database"
CURL="curl --insecure -c /tmp/cookie -b /tmp/cookie"

$CURL $URL/manager
$CURL $URL/change_password --data "master_pwd=admin&master_pwd_new=${ODOO_ADMIN_PASSWORD}"

service odoo stop
service postgresql stop
service apache2 stop
